name:                hilt
version:             0.0.0.1
synopsis:            Application scaffold and batteries-included service implementations for Haskell
description:         Please see README.md
homepage:            https://github.com/supermario/hilt#readme
author:              Mario Rogic
maintainer:          hello@mario.net.au
copyright:           2016 Mario Rogic
category:            Web
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Hilt

                     , Hilt.SocketClient
                     , Hilt.SocketServer
                     , Hilt.SocketServer.Stm
                     , Hilt.Channel.Stm

                     , Hilt.Config

                     , Hilt.Cache
                     , Hilt.Channel
                     , Hilt.Logger
                     , Hilt.Postgres

                     , Hilt.Handles.Cache
                     , Hilt.Handles.Channel
                     , Hilt.Handles.Logger
                     , Hilt.Handles.Postgres

  build-depends:       base >= 4.7 && < 5
                       , random
                       , aeson
                       , http-dispatch
                       , bytestring
                       , text
                       , websockets
                       , mtl
                       , network
                       , wuss
                       , transformers
                       , stm
                       , managed
                       , postgresql-simple
                       , monad-logger
                       , persistent
                       , persistent-sqlite
                       , persistent-postgresql
                       , postgresql-simple
                       , postgresql-simple-url
                       , wai-extra
                       , heroku
                       , heroku-persistent
                       , wai
                       , monad-control
                       , resourcet
                       , slave-thread
                       , unagi-chan
                       , cache

  default-language:    Haskell2010
  default-extensions:  OverloadedStrings

executable hilt-example
  main-is: Main.hs
  build-depends:       base
                     , hilt

  hs-source-dirs:      app/
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings


test-suite hilt-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hilt
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010


source-repository head
  type:     git
  location: https://github.com/supermario/hilt

executable elm-test
  main-is: Elm.hs
  build-depends:       base
  , hilt
  other-modules:       App
  , AppTypes

  hs-source-dirs:      src/
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
